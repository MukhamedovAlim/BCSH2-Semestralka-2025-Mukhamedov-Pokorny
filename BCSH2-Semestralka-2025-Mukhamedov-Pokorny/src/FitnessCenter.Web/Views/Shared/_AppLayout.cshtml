@* Views/Shared/_AppLayout.cshtml *@
@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Přehled";
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <title>@title – Svalovna GYM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Tvoje app CSS (absolutní cesta, bez TagHelperů) -->
    <link rel="stylesheet" href="/css/auth.css" />

    <!-- Tmavé pozadí + “glass” styly (pojistka i kdyby se auth.css nenačetl) -->
    <style>
        .app-bg{
            min-height:100vh;
            background:
                radial-gradient(1200px 600px at 50% -10%, rgba(255,255,255,.05), transparent 60%),
                linear-gradient(180deg, #1b1f25, #111316);
        }
        .glass{ background:rgba(255,255,255,.06); backdrop-filter: blur(6px); border-radius:16px; }
        .tile{ border-radius:16px; padding:16px; }
        .tile h5{ margin-bottom:.5rem; }
        .brand { display:flex; align-items:center; gap:.6rem; }
        .brand img { height:32px; }
        .nav-link.active { color:#fff !important; }
    </style>
</head>
<body class="app-bg">

<nav class="navbar navbar-dark" style="background: rgba(0,0,0,.35);">
  <div class="container">
    <a class="navbar-brand brand" href="@Url.Action("Index","Home")">
      <img src="/img/BDAS2_logo_bile.png" alt="logo" />
      <span>Svalovna GYM</span>
    </a>
    <ul class="navbar-nav flex-row gap-3">
      <li class="nav-item">
        <a class="nav-link @(ViewBag.Active=="Home"?"active":"")"
           href="@Url.Action("Index","Home")">Přehled</a>
      </li>
      <li class="nav-item">
        <a class="nav-link @(ViewBag.Active=="Reservations"?"active":"")"
           href="@Url.Action("Index","Reservations")">Rezervace lekcí</a>
      </li>
      <li class="nav-item">
        <a class="nav-link @(ViewBag.Active=="Equipment"?"active":"")"
           href="@Url.Action("Index","Equipment")">Vybavení</a>
      </li>
      <li class="nav-item">
        <a class="nav-link @(ViewBag.Active=="Payments"?"active":"")"
           href="@Url.Action("Index","Payments")">Platby</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Logout","Account")">Odhlásit</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container py-4">
  @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>
