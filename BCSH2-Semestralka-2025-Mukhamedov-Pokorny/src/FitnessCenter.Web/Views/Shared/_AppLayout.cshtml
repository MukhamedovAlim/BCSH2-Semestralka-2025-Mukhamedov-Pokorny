@* Views/Shared/_AppLayout.cshtml *@
@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Přehled";

    bool isAuth = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin = isAuth && User.IsInRole("Admin");
    bool isTrainer = isAuth && User.IsInRole("Trainer");
    bool isMember = isAuth && User.IsInRole("Member");

    var brandHref = isAdmin
        ? Url.Action("Index", "Admin")
        : (isTrainer ? Url.Action("Trainer", "Home")
                     : Url.Action("Index", "Home"));
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <title>@title – Svalovna GYM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- App CSS -->
    <link rel="stylesheet" href="/css/auth.css" />

    <!-- Základní styly pozadí / “glass” -->
    <style>
        .app-bg{
            min-height:100vh;
            background:
                radial-gradient(1200px 600px at 50% -10%, rgba(255,255,255,.05), transparent 60%),
                linear-gradient(180deg, #1b1f25, #111316);
        }
        .glass{ background:rgba(255,255,255,.06); backdrop-filter: blur(6px); border-radius:16px; }
        .tile{ border-radius:16px; padding:16px; }
        .tile h5{ margin-bottom:.5rem; }
        .brand { display:flex; align-items:center; gap:.6rem; }
        .brand img { height:32px; }
        .nav-link.active { color:#fff !important; }
    </style>
</head>
<body class="app-bg">

<nav class="navbar navbar-dark" style="background: rgba(0,0,0,.35);">
  <div class="container">
    <a class="navbar-brand brand" href="@brandHref">
      <img src="/img/BDAS2_logo_bile.png" alt="logo" />
      <span>Svalovna GYM</span>
    </a>

    <ul class="navbar-nav ms-auto flex-row gap-3">
                @if (isAuth)
                {
                    if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Admin" ? "active" : "")"
                               href="@Url.Action("Index", "Admin")">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Members" ? "active" : "")"
                               href="@Url.Action("Index", "Members")">Členové</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Lessons" ? "active" : "")"
                               href="@Url.Action("Index", "Lessons")">Lekce</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Payments" ? "active" : "")"
                               href="@Url.Action("Index", "Payments")">Platby</a>
                        </li>
                    }
                    if (isTrainer)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "HomeTrainer" ? "active" : "")"
                               href="@Url.Action("Trainer", "Home")">Trenér</a>
                        </li>
                    }
                    if (isMember)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Home" ? "active" : "")"
                               href="@Url.Action("Index", "Home")">Domů</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Account")">Odhlásit</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Account")">Přihlásit</a>
                    </li>
                }
    </ul>
  </div>
</nav>

<div class="container py-4">
  @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>
