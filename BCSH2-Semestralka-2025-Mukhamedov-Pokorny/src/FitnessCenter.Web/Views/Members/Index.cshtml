@using FitnessCenter.Web.Models.Member
@model IEnumerable<MemberViewModel>

@{
    ViewData["Title"] = "Členové";
    Layout = "_AppLayout";
    ViewBag.HideMainNav = true; // skryje položky v navbaru, nechá jen Odhlásit
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center flex-wrap gap-2">
            <a class="btn btn-sm btn-outline-light"
               href="@Url.Action("Admin", "Home")"
               onclick="if (history.length > 1) { history.back(); return false; }">
                ← Zpět
            </a>
            <h3 class="text-white mb-0">Členové</h3>
        </div>

        <a href="@Url.Action("Create", "Members")" class="btn btn-sm btn-warning">
            + Přidat člena
        </a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }


    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Jméno</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>Narozen</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.FirstName @m.LastName</td>
                        <td>@(string.IsNullOrWhiteSpace(m.Email) ? "—" : m.Email)</td>
                        <td>@(string.IsNullOrWhiteSpace(m.Phone) ? "—" : m.Phone)</td>
                        <td>@(m.BirthDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                        <td class="text-end">
                            <!-- Emulace uživatele -->
                            <form action="@Url.Action("Start", "AdminImpersonation")" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@m.MemberId" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-sm btn-warning me-1">
                                    Přihlásit se jako
                                </button>
                            </form>

                            <!-- Smazat -->
                            <form action="@Url.Action("Delete", "Members")"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Opravdu smazat tohoto člena?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@m.MemberId" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Smazat
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
