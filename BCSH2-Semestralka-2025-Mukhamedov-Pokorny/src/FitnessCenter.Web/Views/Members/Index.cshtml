@using FitnessCenter.Web.Models.Member
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<MemberViewModel>?

@{
    ViewData["Title"] = "Členové";
    Layout = "_AppLayout";
    ViewBag.HideMainNav = true;

    var currentSearch = ViewBag.Search as string ?? "";
    var currentSort = ViewBag.Sort as string ?? "";
    var currentMembership = ViewBag.Membership as string ?? "";
    int currentFitnessId = ViewBag.FitnessId != null ? (int)ViewBag.FitnessId : 0;

    var fitnessCenters = ViewBag.FitnessCenters as List<SelectListItem>;

    var total = Model?.Count() ?? 0;
}

<div class="glass p-3">

    <!-- HLAVIČKA -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
        <div class="d-flex align-items-center flex-wrap gap-2">
            <a class="btn btn-sm btn-outline-light"
               href="@Url.Action("Admin", "Home")"
               onclick="if (history.length > 1) { history.back(); return false; }">
                ← Zpět
            </a>
            <h3 class="text-white mb-0">Členové</h3>
        </div>

        <div class="d-flex flex-column align-items-end gap-1">
            <a href="@Url.Action("Create", "Members")" class="btn btn-sm btn-warning">
                + Přidat člena
            </a>
            <small class="text-secondary">
                Nalezeno: <span class="text-light fw-semibold">@total</span> členů
            </small>
        </div>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <!-- FILTRACE -->
    <div class="bg-dark bg-opacity-50 rounded-3 p-2 p-md-3 mb-3">

        <form method="get">
            <div class="row g-2 align-items-center">

                <!-- Hledání -->
                <div class="col-12 col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text border-0 bg-secondary bg-opacity-50 text-light">🔍</span>
                        <input type="text"
                               name="search"
                               value="@currentSearch"
                               class="form-control border-0 bg-dark text-light"
                               placeholder="Hledat podle jména (např. Jan Novák)..." />
                    </div>
                </div>

                <!-- Řazení -->
                <div class="col-6 col-md-2">
                    <select name="sort" class="form-select form-select-sm border-0 bg-dark text-light">
                        <option value="">Řazení podle příjmení</option>
                        <option value="az" @(currentSort == "az" ? "selected" : null)>A → Z</option>
                        <option value="za" @(currentSort == "za" ? "selected" : null)>Z → A</option>
                    </select>
                </div>

                <!-- Filtr permice -->
                <div class="col-6 col-md-2">
                    <select name="membership" class="form-select form-select-sm border-0 bg-dark text-light">
                        <option value="">Všechna členství</option>
                        <option value="active" @(currentMembership == "active" ? "selected" : null)>Jen aktivní</option>
                        <option value="inactive" @(currentMembership == "inactive" ? "selected" : null)>Jen neaktivní</option>
                    </select>
                </div>

                <!-- Filtr fitka -->
                <div class="col-6 col-md-2">
                    <select name="fitnessId" class="form-select form-select-sm border-0 bg-dark text-light">
                        <option value="0">Všechna fitka</option>
                        @if (fitnessCenters != null)
                        {
                            foreach (var fc in fitnessCenters)
                            {
                                var selected = fc.Value == currentFitnessId.ToString() ? "selected" : "";
                                <option value="@fc.Value" @selected>@fc.Text</option>
                            }
                        }
                    </select>
                </div>

                <!-- Tlačítka -->
                <div class="col-12 col-md-2">
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-sm btn-warning w-100 w-md-auto">Filtrovat</button>
                        <a href="@Url.Action("Index", "Members")" class="btn btn-sm btn-outline-light w-100 w-md-auto">Reset</a>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <!-- TABULKA -->
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>Jméno</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>Narozen</th>
                    <th>Fitko</th>
                    <th>Členství</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model?.Any() ?? true)
                {
                    <tr>
                        <td colspan="7" class="text-center text-secondary py-4">
                            Žádní členové neodpovídají zadanému filtru.
                        </td>
                    </tr>
                }
                else if (Model != null)
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                @m.FirstName @m.LastName
                                @if (m.IsTrainer)
                                {
                                    <span class="badge bg-info ms-2">Trenér</span>
                                }
                            </td>

                            <td>@(string.IsNullOrWhiteSpace(m.Email) ? "—" : m.Email)</td>
                            <td>@(string.IsNullOrWhiteSpace(m.Phone) ? "—" : m.Phone)</td>
                            <td>@(m.BirthDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                            <td>@(string.IsNullOrWhiteSpace(m.FitnessName) ? "—" : m.FitnessName)</td>

                            <!-- Členství -->
                            <td>
                                @if (m.MembershipFrom.HasValue)
                                {
                                    <div class="d-flex flex-column">
                                        <div>
                                            @if (m.HasActiveMembership)
                                            {
                                                <span class="badge bg-success me-1">Aktivní</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary me-1">Neaktivní</span>
                                            }
                                        </div>

                                        <small class="text-white-50">
                                            @m.MembershipFrom.Value.ToString("dd.MM.yyyy")
                                            @if (m.MembershipTo.HasValue)
                                            {
                                                @: – @m.MembershipTo.Value.ToString("dd.MM.yyyy")
                                            }
                                        </small>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bez členství</span>
                                }
                            </td>

                            <!-- Akce -->
                            <td class="text-end">

                                <!-- Emulace -->
                                <form action="@Url.Action("Start", "AdminImpersonation")"
                                      method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@m.MemberId" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    <button type="submit" class="btn btn-sm btn-warning me-1">
                                        Přihlásit se jako
                                    </button>
                                </form>

                                <!-- Upravit -->
                                <a href="@Url.Action("Edit", "Members", new { id = m.MemberId })"
                                   class="btn btn-sm btn-outline-info me-1">
                                    Upravit
                                </a>

                                <!-- Smazat -->
                                <form action="@Url.Action("Delete", "Members")"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Opravdu smazat tohoto člena?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@m.MemberId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Smazat
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
