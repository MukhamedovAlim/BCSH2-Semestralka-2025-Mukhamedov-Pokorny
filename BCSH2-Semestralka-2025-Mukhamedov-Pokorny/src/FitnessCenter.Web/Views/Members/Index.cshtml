@model IEnumerable<FitnessCenter.Web.Models.MemberViewModel>

@{
    ViewData["Title"] = "Členové";
    Layout = "_AppLayout";
    // skryje položky v navbaru, nechá jen Odhlásit
    ViewBag.HideMainNav = true;
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center flex-wrap gap-2">
            <a class="btn btn-sm btn-outline-light"
               href="@Url.Action("Admin", "Home")"
               onclick="if (history.length > 1) { history.back(); return false; }">
                ← Zpět
            </a>
            <h3 class="text-white mb-0">Členové</h3>
        </div>

        <a asp-action="Create" class="btn btn-sm btn-warning">+ Přidat člena</a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }

    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Jméno</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>Narozen</th>
                    <th>Aktivní</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.FirstName @m.LastName</td>
                        <td>@(string.IsNullOrWhiteSpace(m.Email) ? "—" : m.Email)</td>
                        <td>@(string.IsNullOrWhiteSpace(m.Phone) ? "—" : m.Phone)</td>
                        <td>@(m.BirthDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                        <td>
                            @if (m.IsActive)
                            {
                                <span class="badge bg-success">ANO</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">NE</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@m.MemberId" class="btn btn-sm btn-outline-light">Detail</a>
                            <a asp-action="Edit" asp-route-id="@m.MemberId" class="btn btn-sm btn-warning">Upravit</a>
                            <a asp-action="Delete" asp-route-id="@m.MemberId" class="btn btn-sm btn-danger">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
