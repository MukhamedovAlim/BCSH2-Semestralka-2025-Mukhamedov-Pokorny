@model List<(int Id, string Nazev, DateTime Datum, int Volno)>
@{
    ViewData["Title"] = "Veřejný rozvrh";
    Layout = "_AppLayout";
    ViewBag.Active = "Public";
}
<div class="glass p-3">
    <a class="btn btn-sm btn-outline-light mb-3" href="@Url.Action("Index", "Public")">← Zpět</a>
    <h4 class="text-white mb-3">Nadcházející lekce</h4>

    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr><th>Název</th><th>Datum</th><th>Volno</th></tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Nazev</td>
                        <td>@x.Datum.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@x.Volno</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a class="btn btn-warning btn-sm" href="@Url.Action("Register", "Account")">Registrovat</a>
        <a class="btn btn-outline-light btn-sm" href="@Url.Action("Login", "Account")">Přihlásit</a>
    </div>
</div>
