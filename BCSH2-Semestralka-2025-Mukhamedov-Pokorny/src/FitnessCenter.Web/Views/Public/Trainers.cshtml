@model IEnumerable<FitnessCenter.Web.Models.Member.MemberTrainerListItem>

@{
    ViewData["Title"] = "Trenéři – veřejný přehled";
    Layout = "_AppLayout";
    ViewBag.Active = "Public";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "Public")">← Zpět</a>
        <span class="h3 text-white mb-0">Trenéři</span>
    </div>
    <div class="text-white-50 small">
        Veřejný přehled trenérů Svalovna Gym.
    </div>
</div>

<div class="table-responsive glass p-2">
    @if (!(Model?.Any() ?? false))
    {
        <div class="text-white-50 p-2">
            Zatím nemáme žádné trenéry v systému.
        </div>
    }
    else
    {
        <table class="table table-dark table-hover align-middle mb-0">
    <thead>
        <tr>
            <th>Jméno</th>
            <th>Kontakt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr class="cursor-pointer"
                onclick="location.href='@Url.Action("TrainerDetail", "Public", new { id = t.Id })'">
                <td>@t.CeleJmeno</td>
                        <td>
                            @if (User?.Identity != null && User.Identity.IsAuthenticated)
                            {
                                @(string.IsNullOrWhiteSpace(t.Telefon) ? "—" : t.Telefon)
                            }
                            else
                            {
                                @(string.IsNullOrWhiteSpace(t.Email) ? "—" : t.Email)
                            }
                        </td>
            </tr>
        }
    </tbody>
</table>
    }
</div>
