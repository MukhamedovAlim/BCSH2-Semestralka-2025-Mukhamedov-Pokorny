@model List<FitnessCenter.Web.Models.TrainerViewModel>
@{
    ViewData["Title"] = "Trenéři";
    Layout = "_AppLayout";
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-white mb-0">Trenéři</h3>
        <a asp-action="Create" class="btn btn-primary">+ Přidat trenéra</a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }

    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Jméno</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>Specializace</th>
                    <th>Sazba (Kč/h)</th>
                    <th>Aktivní</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.FullName</td>
                        <td>@t.Email</td>
                        <td>@t.Phone</td>
                        <td>@(t.Specialty ?? "—")</td>
                        <td>@(t.HourlyRate?.ToString("0") ?? "—")</td>
                        <td>
                            @if (t.IsActive)
                            {
                                <span class="badge bg-success">ANO</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">NE</span>
                            }
                        </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@t.TrainerId" class="btn btn-sm btn-outline-light">Detail</a>
                        <a asp-action="Edit" asp-route-id="@t.TrainerId" class="btn btn-sm btn-warning">Upravit</a>
                        <a asp-action="Delete" asp-route-id="@t.TrainerId" class="btn btn-sm btn-danger">Smazat</a>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
