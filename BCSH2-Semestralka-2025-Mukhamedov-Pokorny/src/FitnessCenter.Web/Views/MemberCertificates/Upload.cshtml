@model FitnessCenter.Web.Models.Member.MemberCertificateUploadViewModel

@{
    ViewData["Title"] = "Nahrát certifikát";
    Layout = "_AppLayout";
    ViewBag.Active = "Home";
}

<div class="glass p-3">
    <h3 class="text-white mb-3">Nahrát certifikát na trenéra</h3>

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <form asp-action="Upload"
          asp-controller="MemberCertificates"
          method="post"
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Certifikát (soubor)</label>
            <input type="file" name="upload" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning">Nahrát</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Zpět</a>
    </form>
</div>

