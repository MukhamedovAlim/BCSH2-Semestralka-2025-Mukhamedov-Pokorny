@model IEnumerable<FitnessCenter.Domain.Entities.Lesson>
@{
    ViewData["Title"] = "Admin – Lekce";
    Layout = "_AppLayout";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Admin", "Home")">← Zpět</a>
        <span class="h3 text-white mb-0">Přehled lekcí</span>
    </div>
</div>

@if (TempData["Ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<div class="table-responsive glass p-2">
    <table class="table table-dark table-striped align-middle mb-0">
        <thead>
            <tr>
                <th>Datum/čas</th>
                <th>Název</th>
                <th class="text-end">Kapacita</th>
                <th class="text-end">Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Zacatek.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@x.Nazev</td>
                    <td class="text-end">@x.Kapacita</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-light me-2"
                           href="@Url.Action("Details", "AdminLessons", new { id = x.Id })">Detail</a>

                        <form action="@Url.Action("Cancel", "AdminLessons")" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@x.Id" />
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Opravdu zrušit tuto lekci? Účastníci budou odhlášeni.')">
                                Zrušit lekci
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
