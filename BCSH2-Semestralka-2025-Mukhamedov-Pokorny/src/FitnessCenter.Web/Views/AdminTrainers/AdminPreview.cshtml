@model IEnumerable<FitnessCenter.Web.Models.Member.MemberTrainerListItem>
@{
    ViewData["Title"] = "Trenéři";
    Layout = "_AppLayout";

    ViewBag.HideMainNav = true;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Admin", "Home")">← Zpět</a>
        <span class="h3 text-white mb-0">Trenéři</span>
    </div>
</div>

<div class="table-responsive glass p-2">
    <table class="table table-dark table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>Jméno</th>
                <th>Telefon</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr class="cursor-pointer"
                    onclick="location.href='@Url.Action("AdminPreviewDetails", "AdminTrainers", new { id = t.Id })'">
                    <td>@t.CeleJmeno</td>
                    <td>@(string.IsNullOrWhiteSpace(t.Telefon) ? "—" : t.Telefon)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
