@model List<FitnessCenter.Web.Models.TrainerViewModel>
@{
    ViewData["Title"] = "Trenéři";
    Layout = "_AppLayout";
    ViewBag.Active = "Admin";
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-sm btn-outline-light"
               href="@Url.Action("Admin", "Home")"
               onclick="if (history.length > 1) { history.back(); return false; }">
                ← Zpět
            </a>
            <h3 class="text-white mb-0">Trenéři</h3>
        </div>

        <a href="@Url.Action("Promote", "AdminTrainers")" class="btn btn-sm btn-warning">
            + Povýšit člena na trenéra
        </a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Jméno</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.FullName</td>
                        <td>@t.Email</td>
                        <td>@t.Phone</td>
                        <td class="text-end">
                            <form action="@Url.Action("Delete", "AdminTrainers")"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Opravdu zrušit roli trenéra?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@t.TrainerId" />
                                <button type="submit" class="btn btn-sm btn-danger">Smazat</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
