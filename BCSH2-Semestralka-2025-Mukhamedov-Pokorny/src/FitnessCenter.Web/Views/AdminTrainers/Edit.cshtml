@model FitnessCenter.Web.Models.TrainerEditViewModel

@{
    ViewData["Title"] = "Upravit trenéra";
    Layout = "_AppLayout";
    ViewBag.HideMainNav = true;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2"
           href="@Url.Action("Index", "AdminTrainers")"
           onclick="if(history.length>1){history.back();return false;}">← Zpět</a>
        <span class="h4 text-white align-middle">Upravit trenéra</span>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-3">
        Zkontroluj prosím jméno, příjmení a e-mail – některé povinné údaje chybí.
    </div>
}

<div asp-validation-summary="All" class="text-danger small mb-2"></div>

<form asp-action="Edit"
      asp-controller="AdminTrainers"
      asp-route-id="@Model.TrainerId"
      method="post"
      novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" name="TrainerId" value="@Model.TrainerId" />

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label text-white" for="Jmeno">Jméno</label>
            <input class="form-control" id="Jmeno" name="Jmeno" value="@Model.Jmeno" />
            <span class="text-danger small" asp-validation-for="Jmeno"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label text-white" for="Prijmeni">Příjmení</label>
            <input class="form-control" id="Prijmeni" name="Prijmeni" value="@Model.Prijmeni" />
            <span class="text-danger small" asp-validation-for="Prijmeni"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label text-white" for="Email">E-mail</label>
            <input class="form-control" id="Email" name="Email" value="@Model.Email" />
            <span class="text-danger small" asp-validation-for="Email"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label text-white" for="Telefon">Telefon</label>
            <input class="form-control" id="Telefon" name="Telefon" value="@Model.Telefon" />
            <span class="text-danger small" asp-validation-for="Telefon"></span>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-warning px-4">Uložit změny</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "AdminTrainers")">Zrušit</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
