@model IReadOnlyList<FitnessCenter.Domain.Entities.Lesson>
@{
    ViewData["Title"] = "Rezervace lekcí";
    Layout = "_AppLayout";
    ViewBag.Active = "Reservations";

    var trainers = ViewBag.Trainers as IDictionary<int, string> ?? new Dictionary<int, string>();
    var volnoMap = ViewBag.VolnoMap as IDictionary<int, int> ?? new Dictionary<int, int>();

    bool hasActiveMembership = ViewBag.HasMembership is bool b && b;
    DateTime? memFrom = ViewBag.MembershipFrom is DateTime mf ? mf : (DateTime?)null;
    DateTime? memTo = ViewBag.MembershipTo is DateTime mt ? mt : (DateTime?)null;

    var reservedIds =
        ViewBag.ReservedLessonIds as System.Collections.Generic.ISet<int>
        ?? new System.Collections.Generic.HashSet<int>();

    string currentSearch = ViewBag.Search as string ?? "";
    string currentFrom = ViewBag.From is DateTime dt ? dt.ToString("yyyy-MM-dd") : "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "Home")">← Zpět</a>
        <span class="h3 text-white align-middle mb-0">Rezervace lekcí</span>
    </div>
    <a class="btn btn-warning" href="@Url.Action("Mine", "Reservations")">Moje rezervace</a>
</div>

@if (TempData["ResMsg"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success small py-2">@msg</div>
}

@if (!hasActiveMembership)
{
    <div class="alert alert-danger small py-2 mb-3">
        Nemáš aktivní členství – na lekce se nelze přihlásit.
    </div>
}
else if (memFrom.HasValue && memTo.HasValue)
{
    <div class="alert alert-secondary small py-2 mb-3">
        Tvé členství je platné od
        <strong>@memFrom.Value.ToString("dd.MM.yyyy")</strong>
        do
        <strong>@memTo.Value.ToString("dd.MM.yyyy")</strong>.
    </div>
}

<div class="mb-3">
    <form method="get" class="row g-2">
        <div class="col-sm-4 col-12">
            <input type="text"
                   name="search"
                   value="@currentSearch"
                   class="form-control form-control-sm"
                   placeholder="Hledat podle názvu lekce" />
        </div>
        <div class="col-sm-3 col-6">
            <input type="date"
                   name="from"
                   value="@currentFrom"
                   class="form-control form-control-sm" />
        </div>
        <div class="col-sm-3 col-6">
            <button type="submit" class="btn btn-sm btn-outline-light me-1">Filtrovat</button>
            <a href="@Url.Action("Index", "Reservations")"
               class="btn btn-sm btn-secondary">Reset</a>
        </div>
    </form>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="text-white-50">Aktuálně nejsou dostupné žádné lekce k rezervaci.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-sm align-middle">
            <thead>
                <tr class="text-white-50">
                    <th>Datum/čas</th>
                    <th>Název</th>
                    <th>Místo</th>
                    <th>Trenér</th>
                    <th>Volno</th>
                    <th class="text-end" style="width:1%; white-space:nowrap;">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    var raw = l.Nazev ?? "";
                    string nazev = raw, misto = "";

                    var atIdx = raw.LastIndexOf('@');
                    if (atIdx >= 0)
                    {
                        nazev = raw[..atIdx].Trim();
                        misto = raw[(atIdx + 1)..].Trim();
                    }

                    if (string.IsNullOrEmpty(misto))
                    {
                        var open = raw.LastIndexOf('(');
                        var close = raw.LastIndexOf(')');
                        if (open >= 0 && close > open)
                        {
                            misto = raw.Substring(open + 1, close - open - 1).Trim();
                            nazev = raw.Remove(open).Trim();
                        }
                    }

                    var volno = volnoMap.TryGetValue(l.Id, out var v) ? v : 0;

                    bool inMembershipWindow = hasActiveMembership
                    && memFrom.HasValue && memTo.HasValue
                    && l.Zacatek.Date >= memFrom.Value.Date
                    && l.Zacatek.Date <= memTo.Value.Date;

                    bool alreadyReserved = reservedIds.Contains(l.Id);

                    <tr>
                        <td>@l.Zacatek.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-white">@nazev</td>
                        <td>@(string.IsNullOrWhiteSpace(misto) ? "neuvedeno" : misto)</td>
                        <td>@(trainers.TryGetValue(l.Id, out var tn) ? tn : "-")</td>
                        <td>
                            @if (volno > 0)
                            {
                                <span class="badge bg-success">@volno</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0</span>
                            }
                        </td>
                        <td class="text-end" style="white-space:nowrap;">
                            @if (!hasActiveMembership)
                            {
                                <span class="badge bg-danger me-2">Bez členství</span>
                                <button class="btn btn-sm btn-secondary" disabled>Nelze zapsat</button>
                            }
                            else if (!inMembershipWindow)
                            {
                                <span class="badge bg-secondary me-2">Mimo platnost</span>
                                <button class="btn btn-sm btn-secondary" disabled>Nelze zapsat</button>
                            }
                            else if (alreadyReserved)
                            {
                                <span class="badge bg-info me-2">Rezervováno</span>
                                <button class="btn btn-sm btn-secondary" disabled>Již zapsán</button>
                            }
                            else if (volno <= 0)
                            {
                                <span class="badge bg-secondary me-2">PLNO</span>
                                <button class="btn btn-sm btn-secondary" disabled>Nelze zapsat</button>
                            }
                            else
                            {
                                <form method="post" action="/Reservations/Book/@l.Id" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-warning">Rezervovat</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
