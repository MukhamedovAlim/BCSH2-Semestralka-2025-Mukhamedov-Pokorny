@{
    ViewData["Title"] = "Moje rezervace";
    Layout = "_AppLayout";
    // ViewBag.Active už nepoužíváme v headeru, může zůstat prázdné
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Index","Home")">← Zpět</a>
        <span class="h3 text-white align-middle mb-0">Moje rezervace</span>
    </div>
</div>

@if (TempData["ResMsg"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success small py-2">@msg</div>
}

<div class="text-white-50">
    (Placeholder) Tady se zobrazí seznam tvých rezervací. Zatím to jen ukazuje hlášku po „Zrušit“.
</div>

