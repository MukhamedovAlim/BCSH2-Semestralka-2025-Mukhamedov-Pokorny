@model List<FitnessCenter.Infrastructure.Repositories.OracleLessonsRepository.MyReservationRow>
@{
    ViewData["Title"] = "Moje rezervace";
    Layout = "_AppLayout";
    var trainers = ViewBag.Trainers as IDictionary<int, string> ?? new Dictionary<int, string>();
}
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Index","Members")">← Zpět na přehled</a>
        <span class="h3 text-white align-middle mb-0">Moje rezervace</span>
    </div>
</div>

@if (TempData["ResMsg"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success small py-2">@msg</div>
}

@if (Model == null || Model.Count == 0)
{
    <div class="text-white-50">Zatím žádné rezervace.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-sm align-middle">
            <thead>
                <tr class="text-white-50">
                    <th>Datum lekce</th>
                    <th>Název</th>
                    <th>Trenér</th>   <!-- nový -->
                    <th>Rezervováno</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="text-white-50">@r.DatumLekce.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-white">@r.Nazev</td>
                        <td>@(trainers.TryGetValue(r.IdLekce, out var tn) ? tn : "-")</td>
                        <td class="text-white-50">@r.DatumRezervace.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-end">
                            <form method="post" action="@Url.Action("Cancel", "Reservations")" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rezId" value="@r.IdRezervace" />
                                <button type="submit"
                                        class="btn btn-outline-light btn-sm"
                                        onclick="return confirm('Opravdu zrušit tuto rezervaci?')">
                                    Zrušit
                                </button>
                            </form>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
}
