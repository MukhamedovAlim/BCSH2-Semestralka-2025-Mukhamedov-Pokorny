@model List<MemberDocumentInfo>

@{
    ViewData["Title"] = "Upravit certifikát";
    Layout = "_AppLayout";
    ViewBag.Active = "AdminCertificates";

    // ID dokumentu dostaneme z ViewBag.DocId (v kontroleru)
    var docId = (int)(ViewBag.DocId ?? 0);
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-white mb-0">Přenahrát certifikát</h3>
        <a asp-action="Index" class="btn btn-sm btn-secondary">
            ← Zpět na seznam
        </a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }

    <form asp-action="Edit"
          asp-route-id="@docId"
          method="post"
          enctype="multipart/form-data"
          class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label text-light">Nový soubor</label>
            <input type="file"
                   name="newFile"
                   class="form-control bg-dark text-light border-0" />
            <div class="form-text text-secondary">
                Vyber nový dokument, kterým bude původní obsah nahrazen.
            </div>
        </div>

        <button type="submit" class="btn btn-warning">
            Uložit změny
        </button>
        <a asp-action="Index" class="btn btn-outline-light ms-2">
            Zrušit
        </a>
    </form>
</div>
