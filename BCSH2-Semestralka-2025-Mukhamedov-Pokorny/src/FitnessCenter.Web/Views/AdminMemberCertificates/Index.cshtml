@model List<MemberDocumentInfo>

@{
    ViewData["Title"] = "Certifikáty členů";
    Layout = "_AppLayout";
    ViewBag.Active = "AdminCertificates";

    var currentSearch = ViewBag.Search as string ?? "";
    var currentSort = ViewBag.Sort as string ?? "";
    var total = Model?.Count ?? 0;
}

<div class="glass p-3">
    <!-- HLAVIČKA -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-sm btn-outline-light"
               href="@Url.Action("Admin", "Home")">
                ← Zpět
            </a>

            <h3 class="text-white mb-0">Certifikáty členů</h3>
        </div>

        <div class="d-flex flex-column align-items-end gap-1">
            <small class="text-secondary">
                Nalezeno: <span class="text-light fw-semibold">@total</span> dokumentů
            </small>
        </div>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <!-- FILTRACE -->
    <div class="bg-dark bg-opacity-50 rounded-3 p-2 p-md-3 mb-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
            <div class="d-flex align-items-center gap-2">
                <span class="badge bg-warning text-dark">Filtr</span>
                <small class="text-secondary">
                    Vyhledej dokument podle člena a seřaď podle data nahrání.
                </small>
            </div>
        </div>

        <form method="get">
            <div class="row g-2 align-items-center">
                <!-- Hledání podle jména člena -->
                <div class="col-12 col-md-6 col-lg-5">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text border-0 bg-secondary bg-opacity-50 text-light">
                            🔍
                        </span>
                        <input type="text"
                               name="search"
                               value="@currentSearch"
                               class="form-control border-0 bg-dark text-light"
                               placeholder="Hledat podle jména člena (např. Erik Šefčík)..." />
                    </div>
                </div>

                <!-- Řazení podle data -->
                <div class="col-6 col-md-3 col-lg-3">
                    <select name="sort"
                            class="form-select form-select-sm border-0 bg-dark text-light">
                        <option value="">Řazení podle data nahrání</option>
                        <option value="newest" @(currentSort == "newest" ? "selected" : "")>
                            Nejnovější → nejstarší
                        </option>
                        <option value="oldest" @(currentSort == "oldest" ? "selected" : "")>
                            Nejstarší → nejnovější
                        </option>
                    </select>
                </div>

                <!-- Tlačítka -->
                <div class="col-6 col-md-3 col-lg-4">
                    <div class="d-flex justify-content-end gap-2 flex-wrap">
                        <button type="submit" class="btn btn-sm btn-warning">
                            Filtrovat
                        </button>
                        <a href="@Url.Action("Index", "AdminMemberCertificates")"
                           class="btn btn-sm btn-outline-light">
                            Reset
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- TABULKA -->
    @if (Model == null || !Model.Any())
    {
        <div class="text-white-50">
            Zatím nejsou nahrané žádné certifikáty.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Člen</th>
                        <th>Název souboru</th>
                        <th>Typ</th>
                        <th>Nahráno dne</th>
                        <th>Nahrál</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@($"{d.MemberName} {d.MemberSurname}".Trim())</td>
                            <td>@d.FileName</td>
                            <td>@d.ContentType</td>
                            <td>@d.UploadedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@d.UploadedBy</td>
                            <td class="text-end">
                                <a href="@Url.Action("Download", "AdminMemberCertificates", new { id = d.Id })"
                                   class="btn btn-sm btn-outline-warning">
                                    Stáhnout
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
