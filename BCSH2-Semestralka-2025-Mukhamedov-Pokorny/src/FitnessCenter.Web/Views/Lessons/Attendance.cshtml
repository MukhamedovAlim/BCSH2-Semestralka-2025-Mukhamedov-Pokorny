@using FitnessCenter.Infrastructure.Repositories
@model IReadOnlyList<LessonAttendee>

@{
    ViewData["Title"] = "Docházka";
    Layout = "_AppLayout";
    var lessonId = (int)ViewBag.LessonId;

    int capacity = ViewBag.Capacity is int c ? c : 0;
    int used = Model.Count;
    int free = capacity > 0 ? capacity - used : 0;

    var defaultAvatar = Url.Content("~/img/avatar-default.png");
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Index", "Lessons")">← Zpět</a>
        <span class="h3 text-white align-middle mb-0">Docházka</span>
    </div>
</div>

<div class="glass p-3">

    <div class="mb-2">
        @if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
        {
            <div class="alert alert-success small py-2 px-3">@ok</div>
        }
        @if (TempData["Err"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger small py-2 px-3">@err</div>
        }
    </div>

    <div class="glass p-3">

        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="text-white-50 small">
                Obsazenost:
                <span class="text-white">@used</span> /
                <span class="text-white">@capacity</span>
                @if (capacity > 0)
                {
                    <span class="text-white-50"> (volno @free)</span>
                }
            </div>
        </div>


    @if (!Model.Any())
    {
        <div class="text-white-50">Nikdo zatím není přihlášen.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width:60px;">#</th>
                        <th>Jméno</th>
                        <th>E-mail</th>
                        <th style="width:130px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var a = Model[i];
                        var detailId = $"member-detail-{a.MemberId}";

                        <!-- hlavní řádek -->
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                <a href="javascript:void(0);"
                                   data-bs-toggle="collapse"
                                   data-bs-target="#@detailId"
                                   class="text-decoration-none text-white">
                                    @a.FullName
                                </a>
                            </td>
                            <td>@a.Email</td>
                            <td>
                                <a href="/Lessons/RemoveMember?lessonId=@lessonId&memberId=@a.MemberId"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Odepsat člena @a.FullName z lekce?');">
                                    Odepsat
                                </a>
                            </td>
                        </tr>

                        <!-- detailní řádek -->
                        <tr class="collapse bg-dark" id="@detailId">
                            <td></td>
                            <td colspan="3">
                                    <div class="d-flex align-items-center mb-2">
                                        @* avatar stejně jako v profilu *@
                                        <div class="rounded-circle bg-dark d-flex align-items-center justify-content-center me-3"
                                             style="width:64px;height:64px;font-size:1.3rem;overflow:hidden;">
                                            @if (!string.IsNullOrWhiteSpace(a.ProfilePhotoUrl))
                                            {
                                                <img src="@a.ProfilePhotoUrl"
                                                     alt="Profilová fotka"
                                                     style="width:100%;height:100%;object-fit:cover;" />
                                            }
                                            else
                                            {
                                                <span class="text-white fw-bold">@a.Initials</span>
                                            }
                                        </div>

                                        <div>
                                            <div class="text-white">
                                                <strong>Jméno:</strong> @a.FullName
                                            </div>
                                            <div class="text-white">
                                                <strong>E-mail:</strong> @a.Email
                                            </div>
                                            <div class="text-white">
                                                <strong>Telefon:</strong> @(string.IsNullOrWhiteSpace(a.Telefon) ? "neuveden" : a.Telefon)
                                            </div>
                                        </div>
                                    </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
