@model FitnessCenter.Domain.Entities.Lesson
@{
    ViewData["Title"] = "Detail lekce";
    Layout = "_AppLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Trainer","Home")">← Zpět</a>
        <span class="h3 text-white align-middle mb-0">Detail lekce</span>
    </div>
</div>

<div class="text-white-50 mb-3">
    @Model.Zacatek.ToString("dd.MM.yyyy HH:mm") · @Model.Mistnost · Kapacita: @Model.Kapacita
</div>

<form method="post" action="/Lessons/Edit" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger small mb-2"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label text-white">Název</label>
            <input asp-for="Nazev" class="form-control" />
            <span asp-validation-for="Nazev" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label text-white">Místnost</label>
            <input asp-for="Mistnost" class="form-control" />
            <span asp-validation-for="Mistnost" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label text-white">Začátek</label>
            <input asp-for="Zacatek" type="datetime-local" class="form-control"
                   value="@Model.Zacatek.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Zacatek" class="text-danger small"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label text-white">Kapacita</label>
            <input asp-for="Kapacita" type="number" class="form-control" />
            <span asp-validation-for="Kapacita" class="text-danger small"></span>
        </div>
        <div class="col-12">
            <label class="form-label text-white">Popis</label>
            <textarea asp-for="Popis" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Popis" class="text-danger small"></span>
        </div>
    </div>

    <button class="btn btn-warning mt-3" type="submit">Uložit změny</button>
</form>
