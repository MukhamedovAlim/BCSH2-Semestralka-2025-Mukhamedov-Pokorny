@model FitnessCenter.Web.Models.LessonDetailDialogViewModel

<div class="bg-dark bg-opacity-75 rounded-4 shadow-lg p-4 p-md-5 position-relative text-white">

    <!-- KŘÍŽEK -->
    <button type="button"
            class="btn-close btn-close-white position-absolute top-0 end-0 m-3"
            data-bs-dismiss="modal"
            aria-label="Zavřít">
    </button>

    <h4 class="fw-semibold mb-2">@Model.Nazev</h4>
    <div class="text-white-50 mb-4">
        @Model.Zacatek.ToString("d. M. yyyy HH:mm")
    </div>

    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="small text-white-50">Kapacita</div>
            <div class="fs-4 fw-semibold">@Model.Kapacita</div>
        </div>
        <div class="col-12 col-md-4">
            <div class="small text-white-50">Rezervováno</div>
            <div class="fs-4 fw-semibold">@Model.Reserved</div>
        </div>
        <div class="col-12 col-md-4">
            <div class="small text-white-50">Obsazenost</div>
            <div class="fs-4 fw-semibold">
                @(Model.Kapacita > 0
                                ? Math.Round(100.0 * Model.Reserved / Model.Kapacita).ToString("0") + " %"
                                : "—")
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="small text-white-50 mb-1">Trenér</div>
        <div>@Model.TrainerName</div>
    </div>

    <hr class="border-secondary" />

    <div class="d-flex justify-content-end mt-4">
        <button type="button"
                class="btn btn-outline-light"
                data-bs-dismiss="modal">
            Zavřít
        </button>
    </div>
</div>