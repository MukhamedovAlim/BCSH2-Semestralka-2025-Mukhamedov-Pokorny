@model IEnumerable<FitnessCenter.Web.Models.LessonViewModel>
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Lekce";
    ViewBag.Active = "Lessons";
}

@await Html.PartialAsync("_BackButton")

@if (TempData["Toast"] is string toast)
{
  <div class="alert alert-success">@toast</div>
}

<div class="d-flex justify-content-between align-items-center mb-2">
  <h4 class="text-white mb-0">Vytvořené lekce</h4>
  <a class="btn btn-primary" href="@Url.Action("Create","Lessons")">+ Nová lekce</a>
</div>

<div class="glass p-3">
  <div class="table-responsive">
    <table class="table table-dark table-striped align-middle mb-0">
      <thead>
        <tr>
          <th>Název</th>
          <th>Začátek</th>
          <th>Místnost</th>
          <th>Kapacita</th>
          <th>Popis</th>
        </tr>
      </thead>
      <tbody>
      @foreach (var l in Model)
      {
        <tr>
          <td>@l.Nazev</td>
          <td>@l.Zacatek.ToString("d. M. yyyy HH:mm")</td>
          <td>@l.Mistnost</td>
          <td>@l.Kapacita</td>
          <td>@(string.IsNullOrWhiteSpace(l.Popis) ? "-" : l.Popis)</td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>
