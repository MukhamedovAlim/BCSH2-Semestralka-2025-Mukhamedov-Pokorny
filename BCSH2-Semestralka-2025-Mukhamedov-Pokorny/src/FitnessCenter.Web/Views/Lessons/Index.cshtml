@model IReadOnlyList<FitnessCenter.Domain.Entities.Lesson>
@{
    ViewData["Title"] = "Moje lekce";
    Layout = "_AppLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-outline-light me-2" href="@Url.Action("Trainer", "Home")">← Zpět</a>
        <span class="h3 text-white align-middle mb-0">Moje lekce</span>
    </div>
    <a class="btn btn-warning" href="@Url.Action("Create", "Lessons")">+ Vytvořit lekci</a>
</div>

@if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Err"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

@if (Model == null || Model.Count == 0)
{
    <div class="text-white-50">Zatím žádné lekce.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-sm align-middle">
            <thead>
                <tr class="text-white-50">
                    <th>Datum/čas</th>
                    <th>Název</th>
                    <th>Kapacita</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.Zacatek.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-white">@l.Nazev</td>
                        <td>@l.Kapacita</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-warning ms-1"
                               href="@Url.Action("Attendance", "Lessons", new { id = l.Id })">
                                Docházka
                            </a>
                            <a class="btn btn-sm btn-outline-info ms-1"
                               href="@Url.Action("Edit", "Lessons", new { id = l.Id })">
                                Upravit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
