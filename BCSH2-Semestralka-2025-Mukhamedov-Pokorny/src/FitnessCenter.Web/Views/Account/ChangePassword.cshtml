@model FitnessCenter.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Změna hesla";
    Layout = "_AppLayout";
}

<div class="glass p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-white mb-0">Změna hesla</h3>

        <a href="@Url.Action("Profile", "Members")"
           class="btn btn-outline-light btn-sm">
            ← Zpět na profil
        </a>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }

    <form asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="CurrentPassword" class="form-label text-white">Aktuální heslo</label>
            <input asp-for="CurrentPassword"
                   id="CurrentPassword"
                   class="form-control"
                   type="password"
                   placeholder="Zadej aktuální heslo" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="NewPassword" class="form-label text-white">Nové heslo</label>
            <input asp-for="NewPassword"
                   id="NewPassword"
                   class="form-control"
                   type="password"
                   placeholder="Zadej nové heslo" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ConfirmPassword" class="form-label text-white">Potvrzení nového hesla</label>
            <input asp-for="ConfirmPassword"
                   id="ConfirmPassword"
                   class="form-control"
                   type="password"
                   placeholder="Zopakuj nové heslo" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">
            Změnit heslo
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
