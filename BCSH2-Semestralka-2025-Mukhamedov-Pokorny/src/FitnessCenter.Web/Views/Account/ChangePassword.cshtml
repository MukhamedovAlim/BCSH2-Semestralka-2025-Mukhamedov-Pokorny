@model FitnessCenter.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Změna hesla";
    Layout = "_AppLayout";
}

<div class="glass p-4" style="max-width: 600px; margin: 0 auto;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-white mb-0">Změna hesla</h3>
    </div>

    <hr class="border-secondary" />

    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger mb-3">@err</div>
    }
    @if (TempData["Ok"] is string ok)
    {
        <div class="alert alert-success mb-3">@ok</div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <form asp-controller="Account" asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()

        <!-- Aktuální heslo -->
        <div class="mb-3">
            <label class="form-label text-white" for="CurrentPassword">Aktuální heslo</label>
            <div class="input-group">
                <input type="password"
                       id="CurrentPassword"
                       name="CurrentPassword"
                       class="form-control"
                       placeholder="Zadej aktuální heslo" />
                <button type="button"
                        class="btn btn-outline-secondary toggle-pwd"
                        data-target="CurrentPassword">
                    👁
                </button>
            </div>
            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
        </div>

        <!-- Nové heslo -->
        <div class="mb-3">
            <label class="form-label text-white" for="NewPassword">Nové heslo</label>
            <div class="input-group">
                <input type="password"
                       id="NewPassword"
                       name="NewPassword"
                       class="form-control"
                       placeholder="Zadej nové heslo" />
                <button type="button"
                        class="btn btn-outline-secondary toggle-pwd"
                        data-target="NewPassword">
                    👁
                </button>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger small"></span>
        </div>

        <!-- Potvrzení nového hesla -->
        <div class="mb-3">
            <label class="form-label text-white" for="ConfirmPassword">Potvrzení nového hesla</label>
            <div class="input-group">
                <input type="password"
                       id="ConfirmPassword"
                       name="ConfirmPassword"
                       class="form-control"
                       placeholder="Zopakuj nové heslo" />
                <button type="button"
                        class="btn btn-outline-secondary toggle-pwd"
                        data-target="ConfirmPassword">
                    👁
                </button>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-warning w-100 mt-2">
            Změnit heslo
        </button>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".toggle-pwd").forEach(btn => {
                btn.addEventListener("click", () => {
                    const targetId = btn.getAttribute("data-target");
                    const input = document.getElementById(targetId);
                    if (!input) return;

                    if (input.type === "password") {
                        input.type = "text";
                        btn.textContent = "🙈";
                    } else {
                        input.type = "password";
                        btn.textContent = "👁";
                    }
                });
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
