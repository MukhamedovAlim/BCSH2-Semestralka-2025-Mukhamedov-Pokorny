@{
    ViewData["Title"] = "Zapomenuté heslo";
    Layout = "_AuthLayout";
}

<h1 class="h4 text-center mb-2 text-white">Zapomenuté heslo</h1>

<p class="text-center text-white-50 mb-4">
    Zadej svůj e-mail. Pokud u nás existuje účet, pošleme ti nové heslo.
</p>

<form method="post" action="/Account/ForgotPassword" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="mb-2">
        <label class="visually-hidden" for="email">E-mail</label>
        <input id="email"
               name="email"
               type="email"
               class="form-control form-control-lg"
               autocomplete="email"
               placeholder="Tvůj e-mail" />
    </div>

    <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">
        Odeslat nové heslo
    </button>
</form>

<div class="mt-3 text-center">
    <a href="/Account/Login" class="text-white-50 text-decoration-none">
        Zpět na přihlášení
    </a>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
