@model FitnessCenter.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AuthLayout";
}

<h1 class="h4 text-center mb-2 text-white">Přihlášení</h1>

<form id="loginForm" method="post" action="/Account/Login" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label class="visually-hidden" for="UserName">Přihlašovací jméno</label>
        <input id="UserName" name="UserName"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="Přihlašovací jméno" />
    </div>

    <div class="mb-2">
        <label class="visually-hidden" for="Password">Heslo</label>
        <input id="Password" name="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="current-password"
               placeholder="Heslo" />
    </div>

    <button id="loginBtn" class="btn btn-primary btn-lg w-100 mt-2" type="submit">Přihlásit se</button>
</form>

@section scripts {
<script>
// pojistka: i kdyby něco bránilo submitu, vynutíme ho
document.getElementById('loginBtn').addEventListener('click', function (e) {
  const f = document.getElementById('loginForm');
  setTimeout(() => f.submit(), 0);
});
</script>
}
