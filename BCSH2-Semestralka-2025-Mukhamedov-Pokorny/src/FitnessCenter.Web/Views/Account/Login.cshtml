@model FitnessCenter.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AuthLayout";
}

<h1 class="h4 text-center mb-2 text-white">Přihlášení</h1>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger small mb-2">
        @foreach (var state in ViewData.ModelState.Values)
        {
            foreach (var error in state.Errors)
            {
                <div>@error.ErrorMessage</div>
            }
        }
    </div>
}

<form asp-action="Login" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label asp-for="Email" class="visually-hidden"></label>
        <input asp-for="Email"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="E-mail" />
    </div>

    <div class="mb-2">
        <label asp-for="Password" class="visually-hidden"></label>
        <input asp-for="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="current-password"
               placeholder="Heslo" />
    </div>

    <button class="btn btn-primary btn-lg w-100 mt-2" type="submit">
        Přihlásit se
    </button>
</form>

<div class="mt-3">
    <a href="@Url.Action("Index", "Public")" class="btn btn-outline-light w-100 mb-2">
        Pokračovat bez přihlášení
    </a>

    <div class="text-center">
        <small class="text-white-50">
            Nemáš účet?
            <a href="/Account/Register" class="link-warning text-decoration-none">Registruj se</a>
        </small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
