@model FitnessCenter.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AuthLayout";

    // signál po úspěšné registraci
    var justRegistered = TempData["JustRegistered"] as bool? ?? false;
    var registerMsg = TempData["RegisterMsg"] as string ?? "Registrace proběhla úspěšně. Teď se přihlas.";
}

<h1 class="h4 text-center mb-2 text-white">Přihlášení</h1>

@if (justRegistered)
{
    <!-- neblokující alert, dá se zavřít křížkem -->
    <div class="alert alert-success alert-dismissible fade show small" role="alert">
        @registerMsg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zavřít"></button>
    </div>
}

<form asp-controller="Account" asp-action="Login" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="mb-2">
        <label asp-for="UserName" class="visually-hidden"></label>
        <input asp-for="UserName"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="Přihlašovací jméno" />
        <span asp-validation-for="UserName" class="text-danger small"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Password" class="visually-hidden"></label>
        <input asp-for="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="current-password"
               placeholder="Heslo" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <button class="btn btn-primary btn-lg w-100 mt-2" type="submit">Přihlásit se</button>
</form>

<form method="get" action="/Account/Register" class="text-center mt-3">
    <button type="submit" class="btn btn-link link-light small p-0">
        Nemáš účet? Registrovat
    </button>
</form>
</div>
