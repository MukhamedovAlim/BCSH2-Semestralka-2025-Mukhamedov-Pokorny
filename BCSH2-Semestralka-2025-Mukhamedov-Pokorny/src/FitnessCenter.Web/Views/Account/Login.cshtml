@model FitnessCenter.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AuthLayout";
}

<h1 class="h4 text-center mb-2 text-white">Přihlášení</h1>

<form id="loginForm" method="post" action="/Account/Login" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label class="visually-hidden" for="Email">E-mail</label>
        <input id="Email" name="Email"
               type="email"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="E-mail" />
    </div>

    <div class="mb-2">
        <label class="visually-hidden" for="Password">Heslo</label>
        <input id="Password" name="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="current-password"
               placeholder="Heslo" />
    </div>

    <button class="btn btn-primary btn-lg w-100 mt-2" type="submit">
        Přihlásit se
    </button>
</form>

<!-- Akce pod formulářem: nejdřív „bez přihlášení“, pod tím registrace -->
<div class="mt-3">
    <a href="@Url.Action("Index", "Public")" class="btn btn-outline-light w-100 mb-2">
        Pokračovat bez přihlášení
    </a>

    <div class="text-center">
        <small class="text-white-50">
            Nemáš účet?
            <a href="/Account/Register" class="link-warning text-decoration-none">Registruj se</a>
        </small>
    </div>
</div>