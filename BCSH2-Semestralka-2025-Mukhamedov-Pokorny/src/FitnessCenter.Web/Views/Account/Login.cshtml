@model FitnessCenter.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "_AuthLayout";
}

<h1 class="h4 text-center mb-2 text-white">Přihlášení</h1>

<form id="loginForm" method="post" action="/Account/Login" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label class="visually-hidden" for="Email">E-mail</label>
        <input id="Email" name="Email"
               type="email"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="E-mail" />
    </div>

    <div class="mb-2">
        <label class="visually-hidden" for="Password">Heslo</label>
        <input id="Password" name="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="current-password"
               placeholder="Heslo" />
    </div>

    <button id="loginBtn" class="btn btn-primary btn-lg w-100 mt-2" type="submit">Přihlásit se</button>
</form>

<div class="text-center mt-3 auth-link">
    <a href="/Account/Register" class="link-light small">Nemáš účet? Registruj se</a>
</div>

@section scripts {
<script>
  document.getElementById('loginBtn').addEventListener('click', function () {
    const f = document.getElementById('loginForm');
    setTimeout(() => f.submit(), 0);
  });
</script>
}
