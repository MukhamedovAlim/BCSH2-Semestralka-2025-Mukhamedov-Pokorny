@model FitnessCenter.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
    Layout = "_AuthLayout";
}
<h1 class="h4 text-center mb-2 text-white">Registrace</h1>

<form asp-action="Register" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="row g-2">
        <div class="col-12 col-md-6 mb-2">
            <label asp-for="FirstName" class="visually-hidden"></label>
            <input asp-for="FirstName"
                   class="form-control form-control-lg"
                   placeholder="Jméno" />
            <span asp-validation-for="FirstName" class="text-danger small"></span>
        </div>
        <div class="col-12 col-md-6 mb-2">
            <label asp-for="LastName" class="visually-hidden"></label>
            <input asp-for="LastName"
                   class="form-control form-control-lg"
                   placeholder="Příjmení" />
            <span asp-validation-for="LastName" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-2">
        <label asp-for="Email" class="visually-hidden"></label>
        <input asp-for="Email"
               class="form-control form-control-lg"
               autocomplete="email"
               placeholder="E-mail" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-2">
        <label asp-for="UserName" class="visually-hidden"></label>
        <input asp-for="UserName"
               class="form-control form-control-lg"
               autocomplete="username"
               placeholder="Přihlašovací jméno" />
        <span asp-validation-for="UserName" class="text-danger small"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Password" class="visually-hidden"></label>
        <input asp-for="Password"
               type="password"
               class="form-control form-control-lg"
               autocomplete="new-password"
               placeholder="Heslo" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ConfirmPassword" class="visually-hidden"></label>
        <input asp-for="ConfirmPassword"
               type="password"
               class="form-control form-control-lg"
               autocomplete="new-password"
               placeholder="Potvrzení hesla" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <button class="btn btn-primary btn-lg w-100 mt-2" type="submit">Vytvořit účet</button>
</form>

<div class="text-center mt-3 auth-link">
    <a href="@Url.Action("Login","Account")" class="link-light small">Už máš účet? Přihlásit</a>
</div>
